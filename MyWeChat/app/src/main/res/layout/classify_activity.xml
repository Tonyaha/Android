<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="5"
    android:padding="5dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="分类"
        android:gravity="center"
        android:textColor="#ffffff"
        android:background="#9bf0db"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="5dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:onClick="onClick"
            android:id="@+id/tp1"
            android:layout_width="170dp"
            android:layout_height="wrap_content">
            <ImageView

                android:background="@drawable/shape"
                android:id="@+id/classify_icon_01"
                android:src="@drawable/bicycle"
                android:layout_width="80dp"
                android:layout_height="80dp" />
            <TextView
                android:id="@+id/class_01"
                android:text="校园代步"
                android:textSize="20dp"
                android:textColor="#58a594"
                android:layout_toRightOf="@id/classify_icon_01"
                android:layout_width="120dp"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/classn_01"
                android:text="自行车 电动车"
                android:textSize="10dp"
                android:textColor="#000000"
                android:layout_below="@id/class_01"
                android:layout_alignLeft="@id/class_01"
                android:layout_width="120dp"
                android:layout_height="40dp" />
        </RelativeLayout>

        <RelativeLayout
            android:onClick="onClick"
            android:id="@+id/tp2"
            android:layout_marginLeft="10dp"
            android:layout_width="170dp"
            android:layout_toRightOf="@id/classify_icon_01"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/shape"
                android:id="@+id/classify_icon_02"
                android:src="@drawable/phone"
                android:layout_width="80dp"
                android:layout_height="80dp" />
            <TextView
                android:id="@+id/class_02"
                android:text="数码"
                android:textSize="20dp"
                android:textColor="#58a594"
                android:layout_toRightOf="@id/classify_icon_02"
                android:layout_width="120dp"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/classn_02"
                android:text="手机 iPad"
                android:textSize="10dp"
                android:textColor="#000000"
                android:layout_below="@id/class_02"
                android:layout_alignLeft="@id/class_02"
                android:layout_width="120dp"
                android:layout_height="40dp" />
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="5dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:onClick="onClick"
            android:id="@+id/tp3"
            android:layout_width="170dp"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/shape"
                android:id="@+id/classify_icon_03"
                android:src="@drawable/computer"
                android:layout_width="80dp"
                android:layout_height="80dp" />
            <TextView
                android:id="@+id/class_03"
                android:text="电脑"
                android:textSize="20dp"
                android:textColor="#58a594"
                android:layout_toRightOf="@id/classify_icon_03"
                android:layout_width="120dp"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/classn_03"
                android:text="联想 戴尔"
                android:textSize="10dp"
                android:textColor="#000000"
                android:layout_below="@id/class_03"
                android:layout_alignLeft="@id/class_03"
                android:layout_width="120dp"
                android:layout_height="40dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tp4"
            android:layout_marginLeft="10dp"
            android:layout_width="170dp"
            android:layout_toRightOf="@id/classify_icon_01"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/shape"
                android:id="@+id/classify_icon_04"
                android:src="@drawable/erji"
                android:layout_width="80dp"
                android:layout_height="80dp" />
            <TextView
                android:id="@+id/class_04"
                android:text="数码配件"
                android:textSize="20dp"
                android:textColor="#58a594"
                android:layout_toRightOf="@id/classify_icon_04"
                android:layout_width="120dp"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/classn_04"
                android:text="耳机 u盘"
                android:textSize="10dp"
                android:textColor="#000000"
                android:layout_below="@id/class_04"
                android:layout_alignLeft="@id/class_04"
                android:layout_width="120dp"
                android:layout_height="40dp" />
        </RelativeLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="5dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/tp5"
            android:layout_width="170dp"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/shape"
                android:id="@+id/classify_icon_05"
                android:src="@drawable/book"
                android:layout_width="80dp"
                android:layout_height="80dp" />
            <TextView
                android:id="@+id/class_05"
                android:text="图书教材"
                android:textSize="20dp"
                android:textColor="#58a594"
                android:layout_toRightOf="@id/classify_icon_05"
                android:layout_width="120dp"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/classn_05"
                android:text="教材 小说"
                android:textSize="10dp"
                android:textColor="#000000"
                android:layout_below="@id/class_05"
                android:layout_alignLeft="@id/class_05"
                android:layout_width="120dp"
                android:layout_height="40dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tp6"
            android:layout_marginLeft="10dp"
            android:layout_width="170dp"
            android:layout_toRightOf="@id/classify_icon_01"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/shape"
                android:id="@+id/classify_icon_06"
                android:src="@drawable/ball"
                android:layout_width="80dp"
                android:layout_height="80dp" />
            <TextView
                android:id="@+id/class_06"
                android:text="运动健身"
                android:textSize="20dp"
                android:textColor="#58a594"
                android:layout_toRightOf="@id/classify_icon_06"
                android:layout_width="120dp"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/classn_06"
                android:text="篮球 足球"
                android:textSize="10dp"
                android:textColor="#000000"
                android:layout_below="@id/class_06"
                android:layout_alignLeft="@id/class_06"
                android:layout_width="120dp"
                android:layout_height="40dp" />
        </RelativeLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="5dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/tp7"
            android:layout_width="170dp"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/shape"
                android:id="@+id/classify_icon_07"
                android:src="@drawable/lamp"
                android:layout_width="80dp"
                android:layout_height="80dp" />
            <TextView
                android:id="@+id/class_07"
                android:text="电器"
                android:textSize="20dp"
                android:textColor="#58a594"
                android:layout_toRightOf="@id/classify_icon_07"
                android:layout_width="120dp"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/classn_07"
                android:text="风扇 台灯"
                android:textSize="10dp"
                android:textColor="#000000"
                android:layout_below="@id/class_07"
                android:layout_alignLeft="@id/class_07"
                android:layout_width="120dp"
                android:layout_height="40dp" />
        </RelativeLayout>

        <RelativeLayout
            android:onClick="onClick"
            android:id="@+id/tp8"
            android:layout_marginLeft="10dp"
            android:layout_width="170dp"
            android:layout_toRightOf="@id/classify_icon_01"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/shape"
                android:id="@+id/classify_icon_08"
                android:src="@drawable/net"
                android:layout_width="80dp"
                android:layout_height="80dp" />
            <TextView
                android:id="@+id/class_08"
                android:text="校园网"
                android:textSize="20dp"
                android:textColor="#58a594"
                android:layout_toRightOf="@id/classify_icon_08"
                android:layout_width="120dp"
                android:layout_height="40dp" />
            <TextView
                android:id="@+id/classn_08"
                android:text="宽带 网线"
                android:textSize="10dp"
                android:textColor="#000000"
                android:layout_below="@id/class_08"
                android:layout_alignLeft="@id/class_08"
                android:layout_width="120dp"
                android:layout_height="40dp" />
        </RelativeLayout>





    </LinearLayout>

</LinearLayout>